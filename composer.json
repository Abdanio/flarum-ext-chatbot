{
    "name": "parchtech/flarum-ext-ai-support",
    "description": "A Flarum extension to integrate AI chatbot support for productive discussions.",
    "type": "flarum-extension",
    "keywords": ["flarum", "extension", "ai", "chatbot", "support"],
    "license": "MIT",
    "authors": [
        {
            "name": "Abdanio Parchezzi",
            "email": "cheeksparchezzi@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/parchtech/flarum-ext-ai-support/issues",
        "source": "https://github.com/parchtech/flarum-ext-ai-support"
    },
    "require": {
        "flarum/core": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "parchtech/flarum-ext-ai-support": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "Parchtech\\AISupport\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "AI Support",
            "icon": {
                "name": "fas fa-robot",
                "backgroundColor": "#4caf50",
                "color": "#ffffff"
            }
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Abdanio/flarum-ext-chatbot"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}

